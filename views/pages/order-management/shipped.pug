extends ../../layouts/admin.pug

block main
    .admin-shipped
        .container
            .row
                .col-12
                    h3.fs-1.fw-bold.pb-5 Shipped
                    each order in orders
                        .card.card-custom
                            .card-desc.pb-3.pt-2
                                h5.fs-3.fw-medium Email: #{order.user.email}
                                strong.fs-3.fw-medium.d-block.pt-2 Create at: #{order.createdAt}
                                strong.fs-3.fw-medium.d-block.pt-2 Address: #{order.shippingAddress}
                                p.pt-2.fs-3.fw-medium Payment status: #{order.paymentStatus}
                            .order-container.card
                                - var count = 1;
                                each product in order.orderItems
                                    .order-card.d-flex.justify-content-around
                                        strong.fs-4.fw-bold= count + "."
                                        img(src=product.thumbnail alt=product.name class="cart-img")
                                        h6.fs-4.fw-bold= product.name
                                        p.fs-5 Price: $#{product.price}
                                        p.fs-5 Quantity: #{product.quantity}
                                        p.fs-5 Total price for this product: $#{product.total}
                                    - count++;
                                .order-desc
                                    strong.fs-3.fw-bold Total: $#{order.totalPrice}
