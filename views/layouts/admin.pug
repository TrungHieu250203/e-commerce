doctype html
html(lang="en")
  head
    title #{pageTitle}
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet")
    link(href="/css/reset.css" rel="stylesheet")
    link(href="/css/style.css" rel="stylesheet")
  body

    include ../partials/header-admin.pug

    main 
     .container
        .row
          .col-3
            .sidebar.mt-4
              ul(class="list-group") 
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-table-columns")
                  a.fs-3.fw-medium(href="/admin/dashboard") Dashboard
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-user-group")
                  a.fs-3.fw-medium(href="/admin/mail-management") People Account & Mail
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-newspaper")
                  a.fs-3.fw-medium(href="/admin/product") Product Management
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-2(class="fa-solid fa-clipboard")
                  a.fs-3.fw-medium(href="/admin/order-management") Order Management
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-message")
                  a.fs-3.fw-medium(href="/admin/report") Report & Chat
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-table-cells")
                  a.fs-3.fw-medium(href="/admin/decentralization") Decentralization
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-user-tie")
                  a.fs-3.fw-medium(href="/admin/manager") Administrator
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-circle-question")
                  a.fs-3.fw-medium(href="/admin/help") Help
                li(class="list-group-item list-group-custom")
                  span
                    i.fs-3(class="fa-solid fa-arrow-left")
                  a.fs-3.fw-medium(href="/") Back
              .version
                strong.fs-3.fw-bold CAMIOCA
                p.fs-4.pt-2 Version 1.1.2
          .col-9
            block main

  script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous")
  script(src="/socket.io/socket.io.js")
  script(src="/js/main.js")